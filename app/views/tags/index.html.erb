
<div class="tags">
  <div class="container">
    <div class="cards row">
    	<% @tags.each do |t| %>
      <div class="card col-xs-4">
        <%= image_tag t.image %>
        <h2><%= t.title %></h2>
        <p center><%= link_to "Learn more", tag_path(t) %></p>
      </div>
      <% end %>
    </div>
  </div>
</div>